{
  "manifest_version": 1,
  "name": "Copy List to Multiple Boards",
  "description": "Select a list and copy it to multiple boards at once. Supports tags, checklists, due dates, and more.",
  "author": "Hunter Boze",
  "version": "1.0.0",
  "icon": {
    "url": "https://copy-list-powerup.vercel.app/imgs/icon@128.png",
    "width": 128,
    "height": 128
  },
  "capabilities": {
    "board-buttons": {
      "url": "./client.js"
    },
    "show-authorization": {
      "url": "./authorize.html"
    }
  },
  "connectors": {
    "iframe": {
      "url": "https://copy-list-powerup.vercel.app"
    }
  },
  "authorization": {
    "type": "oauth1",
    "oauth1": {
      "callbackUrl": "https://copy-list-powerup.vercel.app/api/auth/callback"
    }
  },
  "privacyPolicyUrl": "https://copy-list-powerup.vercel.app/privacy.html",
  "validDomains": [
    "copy-list-powerup.vercel.app"
  ]
}
